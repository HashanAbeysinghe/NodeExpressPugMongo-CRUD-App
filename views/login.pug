extends layout

block content
    h2 Login
    if message
        div.row
            div.card-panel.red.darken-1 #{message}

    div.row
        form.col.s12(method='POST', action='/users/login')
            div.row
                div.input-field.s6
                    input.validate(placeholder='EMail',id='email',name='email', type='text')
                    label(for='email') Email
                div.input-field.s6
                    input.validate(placeholder='Password',id='password',name='password', type='password')
                    label(for='password') Password
            div.row
                div.s12
                    button.btn.waves-effect.waves-light(type='submit',name='action') Login


